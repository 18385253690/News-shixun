<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="网易云" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#44000000"/>


    <RadioGroup
        android:id="@+id/rg_01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <RadioButton
            android:id="@+id/rb_01"
            android:text="新闻"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_01"
            android:gravity="center"
            android:paddingTop="0dp"
            android:textColor="@color/selector_home_tab" />


        <RadioButton
            android:id="@+id/rb_02"
            android:text="视听"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_03"
            android:gravity="center"
            android:paddingTop="0dp"
            android:textColor="@color/selector_home_tab" />

        <RadioButton
            android:id="@+id/rb_03"
            android:text="阅读"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_02"
            android:gravity="center"
            android:paddingTop="0dp"
            android:textColor="@color/selector_home_tab" />

        <RadioButton
            android:id="@+id/rb_04"
            android:text="发现"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_04"
            android:gravity="center"
            android:paddingTop="0dp"
            android:textColor="@color/selector_home_tab" />

        <RadioButton
            android:id="@+id/rb_05"
            android:text="设置"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_05"
            android:gravity="center"
            android:paddingTop="0dp"
            android:textColor="@color/selector_home_tab" />

    </RadioGroup>

</LinearLayout>
